<div class="header">
    <div class="logo">
      <a href="/">
        <img
          src="/images/logo.png"
          alt="Virtual Market logo"
          class="logo-img"
        />
      </a>
    </div>

    <div class="nav-container">
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/stock">Stock Market</a>
        <a href="/portfolio">Portfolio</a>
      </div>
    </div>

    <% if (user) { %>
    <div>Welcome, <%= user.email %>!</div>
    <div class="header-buttons">
      <form action="/Login/Signout" method="post">
        <button type="submit">Sign Out</button>
      </form>
      <% if (user.admin) { %>
      <a href="/Admin">
        <button>Admin</button>
      <% } %>
    </a>
    </div>
    <% } %> 
    <% if (!user) { %> 
    <div class="header-buttons">
      <a href="/CreateAccount"><button>Register</button></a>
      <a href="/Login"><button>Login</button></a>
    </div>
    <% } %> 
  </div>